{
  "name": "example-graphql",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.js",
  "scripts": {
    "start": "node src",
    "dev": "nodemon src",
    "lint": "eslint . --fix",
    "format": "prettier-standard 'src/**/*.js' 'test/**/*.js'",
    "precommit": "lint-staged",
    "pretest": "npm run lint -s && npm run format -s",
    "test": "nyc mocha"
  },
  "engines": {
    "node": ">=8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/lgaticaq/example-graphql.git"
  },
  "keywords": [
    "express",
    "graphql",
    "beerjs",
    "async"
  ],
  "author": "Leonardo Gatica <lgatica@protonmail.com> (https://about.me/lgatica)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lgaticaq/example-graphql/issues"
  },
  "homepage": "https://github.com/lgaticaq/example-graphql#readme",
  "dependencies": {
    "body-parser": "1.18.2",
    "express": "4.16.3",
    "express-graphql": "0.6.12",
    "graphql": "0.13.2",
    "mongoose": "4.13.12"
  },
  "devDependencies": {
    "chai": "4.1.2",
    "eslint": "4.19.1",
    "eslint-config-standard": "11.0.0",
    "eslint-plugin-import": "2.10.0",
    "eslint-plugin-node": "6.0.1",
    "eslint-plugin-promise": "3.7.0",
    "eslint-plugin-standard": "3.0.1",
    "husky": "0.14.3",
    "istanbul": "0.4.5",
    "lint-staged": "7.0.4",
    "mocha": "5.0.5",
    "nodemon": "1.17.3",
    "now-travis": "1.2.0",
    "nyc": "11.6.0",
    "prettier-standard": "8.0.1",
    "supertest": "3.0.0"
  },
  "eslintConfig": {
    "extends": "standard",
    "parserOptions": {
      "ecmaVersion": 2017
    },
    "env": {
      "es6": true,
      "node": true,
      "mocha": true
    },
    "rules": {
      "no-console": [
        "error"
      ]
    }
  },
  "lint-staged": {
    "linters": {
      "src/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ],
      "test/**/*.js": [
        "eslint --fix",
        "prettier-standard",
        "git add"
      ]
    }
  },
  "renovate": {
    "automerge": "minor",
    "extends": [
      ":library"
    ]
  }
}
